<div class="mt-8">
    <div class="w-3/4 mx-auto">
        <div class="border border-2 mb-4" style="border-color: #1f1912;">

            <div class="flex justify-between items-center p-2" style="background-color: #1f1912;">
                <div class="text-white font-bold text-lg">
                    Sign Up
                </div>
            </div>

            <div class="p-4">
                <form action="submit" method="post" class="signup-form">
                    <div class="mb-4">
                        <label for="username" class="block text-gray-700 font-bold mb-2">Username:</label>
                        <input type="text" id="username-signup" name="username" class="w-full border border-2 p-2" required>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="block text-gray-700 font-bold mb-2">Password:</label>
                        <input type="password" id="password-signup" name="password" class="w-full border border-2 p-2" required>
                    </div>

                    <div class="mb-4">
                        <label for="email" class="block text-gray-700 font-bold mb-2">Email:</label>
                        <input type="email" id="email-signup" name="email" class="w-full border border-2 p-2" required>
                    </div>

                    <button type="submit" style="background-color:#1f1912" class="text-white py-2 px-4 rounded">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="./js/signup.js"></script>