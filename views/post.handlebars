
<div class="mx-auto border border-2 mb-4" style="border-color: #1f1912; width: 80%;">

  <div class="flex justify-between items-center p-2" style="background-color: #1f1912;">
    <div class="text-gray-500 font-bold text-lg">
      {{postData2.title}}
    </div>
    <div class="text-gray-500">
      <span>{{postData2.user_username}}</span> | <span>{{postData2.date}}</span>
    </div>
  </div>

  <div class="text-black rounded p-4 bg-white">
    {{postData2.blog}}
  </div>
</div>

{{#each commentData2}}
  <div class="mx-auto relative border border-2 mb-2" style="border-color: #1f1912; width: 60%;">
    <div class="arrow-left"></div>
    <div class="flex justify-between items-center p-2" style="background-color: #1f1912;">
      <div class="text-gray-500 font-bold text-sm">
        {{this.date}} by {{this.user_username}}
      </div>
    </div>
    <div class="text-black rounded p-2 bg-white">
      {{this.review}}
    </div>
  </div>
{{/each}}

<form action="/post/{{postData2.id}}" method="POST" id="commentForm" class="mt-4 mx-auto" style="width: 60%;">
  <div class="flex flex-col">
    <label for="comment" class="text-gray-500">Add a Comment:</label>
    <textarea name="commentText" id="comment" class="border p-2" required></textarea>
  </div>
  <button type="submit" class="bg-blue-500 text-white p-2 mt-2">Submit Comment</button>
</form>